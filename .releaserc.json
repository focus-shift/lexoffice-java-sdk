{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "repositoryUrl": "https://github.com/octalog-de/lexware-java-sdk",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {"type": "chore", "release": "patch"},
          {"type": "chore", "scope": "ai", "release": false},
          {"type": "chore", "scope": "deps", "release": false},
          {"type": "chore", "scope": "ide", "release": false},
          {"type": "chore", "scope": "project", "release": false},
          {"type": "refactor", "release": "patch"},
          {"type": "ci", "release": "patch"},
          {"type": "test", "release": false},
          {"type": "docs", "release": "patch"}
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {"type": "feat", "section": "âœ¨ Features", "hidden": false},
            {"type": "fix", "scope": "deps", "section": "ğŸ“¦â€ Dependencies", "hidden": false},
            {"type": "fix", "section": "ğŸ› Bug Fixes", "hidden": false},
            {"type": "chore", "scope": "ai", "hidden": true},
            {"type": "chore", "scope": "deps", "section": "ğŸ“¦â€ Dependencies", "hidden": false},
            {"type": "chore", "scope": "ide", "section": "ğŸ“¦â€ Dependencies", "hidden": false},
            {"type": "chore", "scope": "project", "section": "ğŸ“¦â€ Dependencies", "hidden": false},
            {"type": "chore", "section": "ğŸ› ï¸ Maintenance", "hidden": false},
            {"type": "refactor", "section": "ğŸ› ï¸ Maintenance", "hidden": false},
            {"type": "ci", "section": "ğŸ› ï¸ Maintenance", "hidden": false},
            {"type": "test", "section": "ğŸ› ï¸ Maintenance", "hidden": false},
            {"type": "docs", "section": "ğŸ“š Documentation", "hidden": false},
            {"type": "revert", "section": "ğŸ”™ Reverts", "hidden": false}
          ]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./gradlew -PVERSION_NAME=${nextRelease.version} publishToMavenCentral"
      }
    ],
    "@semantic-release/github"
  ]
}
